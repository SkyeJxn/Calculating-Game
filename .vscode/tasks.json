{
    // See https://code.visualstudio.com/docs/editor/tasks for more information
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Java Main",
            "type": "shell",
            "command": "java",
            "args": [
                "Main"
            ],
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "Update Javadoc",
            "type": "shell",
            "command": "javadoc",
            "args": [
                "-d", "docs",
                "src/main/java/*.java"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Compile All Java Files",
            "type": "shell",
            "command": "javac",
            "args": [
                "*.java"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Maven Package",
            "type": "shell",
            "command": "mvn",
            "args": [
                "clean",
                "package"
            ],
            "group": "build",
            "problemMatcher": []
        }
    ]
}